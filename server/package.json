    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "~5.5.4",
    "tsx": "^4.19.3",
    "vitest": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
