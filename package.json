    "clsx": "^2.1.1",
    "dexie": "^4.0.11",
    "immer": "^10.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-router-dom": "^7.6.3",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^3.3.1",
