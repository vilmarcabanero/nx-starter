{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/application-core-server",
    "declaration": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "../application-core-shared/src/**/*.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "../application-core-shared/src/**/*.test.ts",
    "../application-core-shared/src/**/*.spec.ts"
  ]
}
